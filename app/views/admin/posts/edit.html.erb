<div class="container">
    <div class="row">
        <div class="col-3">
            <h4 class="p-3">投稿詳細編集</h4>
        </div>
        <div class="col-8">
            <%= form_with model: @post, url: admin_post_path, method: :patch do |f| %>
            <table class="table table-borderless mt-4">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>画像</td>
                        <td><%= f.file_field :image, placeholder: "投稿画像", accept: "image/*" %></td>
                    </tr>
                    <tr>
                        <td>タイトル</td>
                        <td><%= f.text_field :title %></td>
                    </tr>
                    <tr>
                        <td>本文</td>
                        <td><%= f.text_field :body %></td>
                    </tr>
                    <tr>
                        <td>ジャンル</td>
                        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
                    </tr>
                    <tr>
                        <td>投稿ステータス</td>
                        <td><%= f.select :post_status, Post.post_statuses.keys.map { |k| [t("enums.post.post_status.#{k}"),k]}, {} %></td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <%= f.submit " 保存 ", class: 'btn btn-success' %>
            </div>
            <% end %>
        </div> 
    </div>
</div>
<div class="container">
    <div class="row p-3">
        <h3>投稿履歴</h3>
    </div>
    <div class="row center-block">
        <table class="table table-bordered">
            <thead class="table-primary">
                <th>投稿日時</th>
                <th>投稿者</th>
                <th>タイトル</th>
                <th>ステータス</th>
            </thead>
            <% @posts.each do |post| %>
            <tbody>
                <td>
                    <%= link_to admin_post_path(post.id) do %>
                        <%= post.created_at.strftime("%Y/%m/%d") %>
                    <% end %>
                </td>
                <td><%= post.member.last_name+post.member.first_name %></td>
                <td><%= post.title %></td>
                <td><%= post.post_status_i18n %></td>
            </tbody>
            <% end %>
        </table>
    </div>
    
    <div class="row d-flex justify-content-center">
        <%= paginate @posts %>
    </div>
</div>

<h1>Post</h1>
<table>
    <thead>
        <tr>
            <th>投稿日時</th>
            <th>氏名</th>
            <th>ニックネーム</th>
            <th>タイトル</th>
            <th>投稿ステータス</th>
        </tr>
    </thead>
<% @posts.each do |post| %>
    <tbody>
        <tr>
            <td>
                <%= link_to admin_post_path(post.id) do %>
                <%= post.created_at.strftime("%Y/%m/%d") %>
                <% end %>
            </td>
            <td><%= post.member.last_name+post.member.first_name %></td>
            <td><%= post.member.nickname %></td>
            <td><%= post.title %></td>
            <td><%= post.post_status %></td>
        </tr>
    </tbody>
<% end %>
</table>
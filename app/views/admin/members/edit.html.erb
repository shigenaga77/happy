<div class="container p-3">
    <div class="row">
        <div class="col-3">
            <h3>会員詳細編集</h3>
        </div>
        <div class="col-8">
    <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
            <table class="table table-bordered">
                <thead>
                    <tr></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>会員ID</td>
                        <td><%= @member.id %></td>
                    </tr>
                    <tr>
                        <td>氏名</td>
                        <td><%= f.text_field :last_name %></td>
                        <td><%= f.text_field :first_name %></td>
                    </tr>
                    <tr>
                        <td>フリガナ</td>
                        <td><%= f.text_field :last_name_kana %></td>
                        <td><%= f.text_field :first_name_kana %></td>
                    </tr>
                    <tr>
                        <td>ニックネーム</td>
                        <td><%= f.text_field :nickname %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= f.text_field :email %></td>
                    </tr>
                    <tr>
                        <td>会員ステータス</td>
                        <td>
                            <%= f.radio_button :is_deleted, :false %>
                            <%= f.label :is_deleted, "有効", value: false %>

                            <%= f.radio_button :is_deleted, :true %>
                            <%= f.label :is_deleted, "退会" , value: true %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="row d-flex justify-content-center">
                <%= f.submit '変更を保存', class: 'btn btn-success' %>
            </div>
    <% end %>
        </div>
    </div>
</div>
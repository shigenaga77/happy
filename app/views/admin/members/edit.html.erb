<h1>会員詳細編集</h1>
<%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
<table>
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>会員ID</td>
            <td><%= @member.id %></td>
        </tr>
        <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
        </tr>
        <tr>
            <td>会員ステータス</td>
            <td></td>
        </tr>
    </tbody>
</table>
<div class="mx-auto col-xl-6">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
</div>
<% end %>
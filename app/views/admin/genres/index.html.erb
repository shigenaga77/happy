<div class="container p-3">
    <div class="row">
        <div class="col-8">
            <h3>ジャンル一覧・追加</h3>
            <div class="p-3">
                <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
                    <%= f.label :ジャンル名 %>
                    <%= f.text_field :name %>
                    
                    <%= f.submit '新規登録', class: "btn btn-outline-primary" %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row col-5 p-3">
        <table class="table table-hover">
            <thead>
                <tr class="table-success">
                    <th>ジャンル</th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-outline-success" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

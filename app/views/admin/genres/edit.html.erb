<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h3>ジャンル編集</h3>
            <div class="p-3">
                <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
                    <%= f.label :ジャンル名 %>
                    <%= f.text_field :name %>
                    
                    <%= f.submit '保存', class: "btn btn-outline-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

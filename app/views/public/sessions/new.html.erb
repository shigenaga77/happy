<div class="container">
  <div class="row d-flex justify-content-center p-3">
    <h3>ログイン</h3>
  </div>
  <div class="row d-flex justify-content-center p-3">
    <%= form_with model: @member, url: member_session_path do |f| %>
      <div class="field">
        <%= f.label :メールアドレス, class: 'registrations' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード, class: 'registrations' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions d-flex justify-content-center p-3">
        <%= f.submit "ログイン", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center p-3">
    会員登録がお済みでない方は<%= link_to 'こちら', new_member_registration_path %>
  </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-3">
            <h4>New post</h4>
                <%= form_with model: @post do |f| %>
                    <div>
                        <%= f.label :画像 %>
                        <%= f.file_field :image, accept: "image/*" %>
                    </div>
                    <div>
                        <%= f.label :タイトル %>
                        <%= f.text_field :title %>
                    </div>
                    <div>
                        <%= f.label :本文 %>
                        <%= f.text_area :body %>
                    </div>
                    <div>
                        <%= f.label :ジャンル %>
                        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
                    </div>
                    <div class="form-group">
                        <!--<= f.select :post_status, Post.post_statuses.keys.map { |k| [t("enums.post.post_status.#{k}"),k]}, {} %>-->
                        <%= f.radio_button :post_status, Post.post_statuses.key(0) %>
                        <%= f.label :post_status_published, Post.post_statuses_i18n[:published] %>
                        
                        <%= f.radio_button :post_status, Post.post_statuses.key(1) %>
                        <%= f.label :post_status_draft, Post.post_statuses_i18n[:draft]%>
                    </div>
                        <%= f.submit '投稿する' %>
                <% end %>
            <h4>Genre</h4>
                <% @genre.each do |g| %>
                    <ul>
                        <li>
                            <!--<= link_to post_path(post.id) do %>-->
                                <%= g.name %>
                            <!--< end %>-->
                        </li>
                    </ul>
                <% end %>
        </div>
        <div class="col-7">
            <h3 class="d-flex justify-content-center">Post</h3>
                <div class="d-flex flex-wrap">
                    <% @posts.each do |post| %>
                    <table class="mr-5">
                        <thead>
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
                            </tr>
                            <tr>
                                <td>
                                    <%= link_to post_path(post.id) do %>
                                    <%= image_tag post.image, size: "100x100" %>
                                    <% end %>
                                </td>
                            </tr>
                            <tr>
                                <td><%= post.genre.name %></td>
                            </tr>
                            <tr>
                                <td><%= post.title %></td>
                            </tr>
                            <tr>
                                <td><%= post.body %></td>
                            </tr>
                            <tr>
                                <td><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></td>
                            </tr>
                        </tbody>
                    </table>
                    <% end %>
                </div>
        </div>
    </div>
</div>
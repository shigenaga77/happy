<div class="container main_color">
    <div class="row">
        <div class="col-10">
            <h3>下書き一覧</h3>
                <% @posts.each do |post| %>
                        <table>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= link_to post_path(post.id) do %>
                                            <%= post.created_at.strftime("%Y/%m/%d") %><br>
                                            <%= image_tag post.image, class: "draft-post-image" %>
                                        <% end %>
                                    </td>
                                    <td>
                                        <%= post.title %><br>
                                        <%= post.body %>
                                        <%= link_to "", edit_post_path(post.id) %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                <% end %>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>


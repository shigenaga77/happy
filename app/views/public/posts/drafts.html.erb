<div>
    <h1>下書き</h1>
        <% @posts.each do |post| %>
            <div>
                <%= post.created_at.strftime("%Y/%m/%d") %>
                <%= link_to post_path(post.id) do %>
                <%= image_tag post.image, size: "100x100" %>
                <% end %>
                <%= post.genre_id %>
                <%= post.title %>
                <%= post.body %>
                <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
            </div>
        <% end %>
</div>

<div class="container main_color">
  <div class="row d-flex justify-content-start">
      <h3 class="p-3">検索結果 "<%= @keyword %>"</h3>
  </div>
  <div class="row d-flex justify-content-start">
      <% @post.each do |post| %>
        <div class="d-flex justify-content-between mb-3">
                <div class="p-5">
                    <p><%= post.created_at.strftime("%Y/%m/%d") %></p>
                    <%= link_to post_path(post.id) do %>
                    <%= image_tag post.image, size: "100x100" %>
                    <% end %>
                </div>
                <div class="p-5">
                    <table class="table table-borderless">
                        <thead>
                            <tr><th></th></tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= post.title %></td>
                            </tr>
                            <tr>
                            <td><%= post.body %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div></div>
            </div>
      <% end %>
  </div>
</div>
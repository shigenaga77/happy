<h3>Pick up</h3>
    <% pick_posts.each do |post| %>
    <table class="mr-5">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= link_to post_path(post.id) do %>
                            <%= post.created_at.strftime("%Y/%m/%d") %>
                        <%end %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= image_tag post.image, size: "100x100" %>
                    </td>
                </tr>
                <tr>
                    <td><%= post.title %></td>
                </tr>
                <tr>
                    <td><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></td>
                </tr>
            </tbody>
        </table>
    <% end %>
    <h3>Ranking</h3>
    <!--同率順位表示-->
    <% last_like = 0 %>
    <% j = 1 %>
    <!--配列の1つ目から順に1位、２位と表示される-->
    <% post_like_ranks.each.with_index(1) do |post, i| %>
    <!--最初の値をlast_likeに保存-->
      <% if i == 1 %>
        <% last_like = post.favorites.count %>
      <% end %>
      <% if post.favorites.count != last_like %>
        <% j = i %>
        <strong>第<%= j %>位</strong>
        <% last_like = post.favorites.count %>
      <% else %>
      <% last_like = post.favorites.count %>
        <strong>第<%= j %>位</strong>
      <% end %>
    :
    <!--表示したいカラムをご自由に-->
    <table class="mr-5">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <%= image_tag post.image, size: "100x100" %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <%= link_to post_path(post.id) do %>
                                <%= post.title %>
                            <% end %>
                        </td>
                    </tr>
                    <tr>
                        <td><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></td>
                    </tr>
                </tbody>
            </table>
    <% end %>